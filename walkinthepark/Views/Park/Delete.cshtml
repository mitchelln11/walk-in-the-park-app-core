@model walkinthepark.Models.Park

@{
    ViewData["Title"] = "Delete";
}

    <div class="flex-container">
        <div class="flex-box">
            <div class="content-box">
                <h1>Delete @Model.ParkName</h1>

                <h3>Are you sure you want to delete this Park?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ParkName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ParkName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ParkState)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ParkState)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ParkDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ParkDescription)
                        </dd>
                    </dl>

                    @Html.HiddenFor(model => model.ParkLatitude)
                    @Html.HiddenFor(model => model.ParkLongitude)
                    @Html.HiddenFor(model => model.ParkCode)

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ParkId" />
                        <a asp-action="Details" asp-route-id="@Model.ParkId" class="btn btn-default">Back to Park</a>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>

                </div>
            </div>
        </div>
    </div>