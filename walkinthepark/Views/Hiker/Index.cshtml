@model IEnumerable<walkinthepark.Models.Hiker>

@{
    ViewData["Title"] = "Index";
}
<div class="flex-container">
    <div class="flex-box">
        <div class="content-box">
            <h1>Hiker List</h1>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.EnumState)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.EnumState)
            </td>*@
            <td>
                @Html.ActionLink("Back to Home", "Index", "Home", new { @class = "btn medium-brown drop-shadow" })
            </td>
        </tr>
        }
    </tbody>
</table>
